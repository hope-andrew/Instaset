<!DOCTYPE html>
<html>
<head>
  <title>Instaset</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script type="text/javascript"
  src="//api.filepicker.io/v1/filepicker.js"></script>

  <script>
    filepicker.setKey("Avq1MCWTayzGfEEGvcnHgz");
  </script>
  <%= csrf_meta_tags %>
</head>
<body>

<h1> Instaset </h1>
<br>
<%= yield %>

<script charset="utf-8">
  Instaset.currentUser = <%= current_user.to_json.html_safe if signed_in? %>
</script>


<br>
<% if signed_in? %>
<%= current_user.username %>
<%= button_to "Sign Out", session_url, method: :delete %>
<% end %>

<% if flash[:error] %>
<% flash[:error].each do |error| %>
<%=   error %>
<% end %>
<% end %>


</body>
</html>
